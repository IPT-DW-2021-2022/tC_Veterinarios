@model Veterinarios.Models.Animais

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de um animal</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome) @* nome do animal*@
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especie) @*Espécie*@
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Raca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Raca) @*Raça*@
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Peso) Kg   @*Peso*@
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Animais/@Model.Foto"
                 alt="foto do @Model.Nome"
                 title="@Model.Nome"
                 height="100" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dono)
        </dt>
        <dd class="col-sm-10">
            @* dados do Dono *@
            <i>dono: </i><a asp-controller="Donos" 
                            asp-action="Details" 
                            asp-route-id="@Model.Dono.Id">@Model.Dono.Nome</a> <br />
            <i>NIF: </i>@Model.Dono.NIF <br />
            <i>Email: </i>@Model.Dono.Email <br />
            <i>Sexo: </i>@(Model.Dono.Sexo.ToLower()=="m"?"masculino":"feminino")
            @*@Html.DisplayFor(model => model.Dono.NIF)*@
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
