@model Veterinarios.Models.MedicosVeterinarios

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MedicosVeterinarios</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Edit" enctype="multipart/form-data">
            @* NÃO ESQUECER que só se consegue fazer o File Upload
                com o enctype="multipart/form-data"*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* preservar os dados do médico Veterinário para uso posterior *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Fotografia" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumCedulaProf" class="control-label"></label>
                <input asp-for="NumCedulaProf" class="form-control" readonly="readonly" />
                <span asp-validation-for="NumCedulaProf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotografia" class="control-label"></label>
                @*   <input asp-for="Fotografia" class="form-control" />   *@
                <input type="file" name="fotoVet" class="form-control" accept=".jpg,.png" />
                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
