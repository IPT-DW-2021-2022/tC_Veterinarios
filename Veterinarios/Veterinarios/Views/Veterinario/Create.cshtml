@model Veterinarios.Models.MedicosVeterinarios

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Médico Veterinário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <div class="form-group">
                </div>
                <label asp-for="NumCedulaProf" class="control-label"></label>
                <input asp-for="NumCedulaProf" class="form-control" />
                <span asp-validation-for="NumCedulaProf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotografia" class="control-label"></label>
                @*     <input asp-for="Fotografia" class="form-control" />   *@
                <input type="file" name="fotoVet" class="form-control" accept=".jpg,.png"  />
                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regressar à listagem</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
